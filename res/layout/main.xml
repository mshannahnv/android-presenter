<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  	android:background="#000000"           
    
    android:orientation="vertical" >   

    
   <LinearLayout 
     		android:layout_width="match_parent"
            android:layout_height="wrap_content"
   			android:background="#000000"                  
    		android:orientation="horizontal" > 
          		
             <ImageView
            android:id="@+id/ImageIcon"
            android:layout_width="1px"          
            android:layout_height="1px"
  			android:background="#000000"       
            android:layout_gravity="center_vertical"

          ></ImageView>    
            
    		<TextView
            android:id="@+id/Text_Day_Date"
            android:layout_height="wrap_content"
            android:text="Tue 1/1 "
            android:textSize="24dp"
            android:textColor="#ffffff" 
  			android:background="#000000"               
            android:layout_width="wrap_content"
            android:layout_gravity="center|center_vertical" 

            ></TextView>
    		
    		<TextView
            android:id="@+id/Text_Spacer_For_DigitalClcok"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="15dp"
            android:layout_width="20dp"
            android:layout_gravity="center|center_vertical" 
            
            ></TextView> 
             		
     			<DigitalClock 
      		android:layout_width = "wrap_content"      
    			android:layout_height="wrap_content"  
        	 	android:textSize="50dp"
            	android:textColor="#00ff00" 
  				android:background="#0f0f0f" 
           		android:layout_gravity="center|center_vertical" 
  			 	android:textAllCaps="true" 
  			 />
     			
  	</LinearLayout>  
  	
   		<LinearLayout 
     		android:layout_width="wrap_content"
            android:layout_height="wrap_content"
  			android:background="#000000"               
    		android:orientation="horizontal" >    
    		
        <ImageView
            android:id="@+id/Image1"
            android:layout_width="300px"          
            android:layout_height="168px"
            android:src="@drawable/coffee_cup_1_1920x1080"
            android:layout_gravity="right|center_vertical" 
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
          ></ImageView>    
   		    
        <ImageView
            android:id="@+id/Image2"
            android:layout_width="300px"          
            android:layout_height="168px"
            android:src="@drawable/summer_white_beach_1920x1080"
            android:layout_gravity="right|center_vertical" 
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
          ></ImageView>    
                   	
		</LinearLayout>
 
 		<LinearLayout 
     		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
   			android:background="#000000"      		
    		android:orientation="horizontal" >   		    
	   
        <ImageView
            android:id="@+id/Image3"
            android:layout_width="300px"          
            android:layout_height="168px"
            android:src="@drawable/ball_3_png_512x512"
            android:layout_gravity="right|center_vertical" 
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
          ></ImageView>    
    
        <ImageView
            android:id="@+id/Image4"
            android:layout_width="300px"          
            android:layout_height="168px"
             android:src="@drawable/ball_4_png_300x300"
            android:layout_gravity="right|center_vertical" 
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
          ></ImageView> 
        
 </LinearLayout>
    

        
        <ImageView
            android:id="@+id/Image5"
            android:layout_width="600px"             
            android:layout_height="340px"
            android:src="@drawable/summer_white_beach_1920x1080"
  			android:background="#000000"               
            android:layout_gravity="center"
          ></ImageView>            		
 		
 		
 		<LinearLayout 
     		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal" >   		    
	   
 
         <ImageView
            android:id="@+id/Image_Left"
             android:layout_width="300px"         
             android:layout_height="wrap_content"
            android:src="@drawable/arrow_blue_left_400x307"
            android:layout_gravity="right|center_vertical" 
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
          ></ImageView>    

        
        <ImageView
            android:id="@+id/Image_Right"
            android:layout_width="300px"           
              android:layout_height="wrap_content"
            android:src="@drawable/arrow_blue_right_400x307"
            android:layout_gravity="right|center_vertical" 
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
          ></ImageView>           
        
        
 </LinearLayout>	
 		
</LinearLayout>